                    <li class=" li-text">
                        <i class="fa fa-cog fa-lg "></i>
                        <span class="d-none d-md-inline">Change Password
                        </span>
                    </li>
                </a>
                {{#if user.isAdmin}}
                <a class='list-group-item {{active href "register"}} d-inline-block collapsed' href="/register">
                    <li class=" li-text">
                        <i class="fa fa-user-plus fa-lg "></i>
                        <span class="d-none d-md-inline">Register New User
                        </span>
                    </li>
                </a>
                <a class='list-group-item {{active href "manage-users"}} d-inline-block collapsed' href="/manage-users">
                    <li class=" li-text">
                        <i class="fa fa-users fa-lg "></i>
                        <span class="d-none d-md-inline">Manage Users
                        </span>
                    </li>
                </a>
                {{/if}}
                <a class='list-group-item d-inline-block collapsed' href="/logout">
                    <li class=" li-text">
                        <i class="fa fa-power-off fa-lg "></i>
                        <span class="d-none d-md-inline">Logout
                        </span>
                    </li>
                </a>
                {{/if}}
