<div class="holder-div">
    <div class="container-fluid">
                <div class="header-div">
            <h1>{{title}}</h1>
            {{>errors }}
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="login-div">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" src='../imgs/gbbq1.png' alt='log'>
                        </div>
