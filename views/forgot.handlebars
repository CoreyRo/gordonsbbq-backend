<div class="holder-div">
    <div class="container-fluid">
        <div class="header-div">
            <h1>{{title}}</h1>
            {{>errors }}
        </div>
        <div class="row">
            <div class="col-md-6 mx-auto">
                <form class='regForm pb-10' method='POST' action='/forgot-login'>
                    <h2>Reset your password</h2>
                    <div class="form-group">
                        <label for="forgetEmail">Enter the email address for your account.</label>
                        <input type="email" class="form-control" id="forgetEmail" name='forgetEmail' placeholder="Enter email">
                    </div>
                    <button type="submit" class="btn btn-primary buttonL">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>