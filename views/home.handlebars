{{> header }}
<div class="blogpage">
    <div class="main-header-div">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="admin-header">
                    <h3>The Redivo Group Blog Control</h3>
                        <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="admin-options">
                        <h3 >Admin Controls</h3>
                        <ul>
                            <li>
                                <form method="GET" action='/api/blog/getpages/1'>
                                    <button id="prevBtn" type="submit" class="admin-btn"><i class="fas fa-plus-square"></i> Go to blog posts</button>
                                </form>
                            </li>
                            <li>
                                <form method='GET' action='/newpost'>
                                    <button type="submit" class="admin-btn"><i class="fas fa-plus-square"></i> Create a new blog post</button>
                                </form>
                            </li>
                            <li>
                                <form method='GET' action='/api/blog/getone/{{this.id}}'>
                                    <button type="submit" class="admin-btn"><i class="fas fa-edit"></i> Create a new blog post</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="blog-div">
        <div class="container">
            <div class="row">
                {{#everyNth blog.docs 3}}
                    {{#if isModZeroNotFirst}}
            
                        </div>
                    {{/if}}
                    {{#if isModZero}}
                        <div class="row">
                    {{/if}}
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-8">
                                    <h2>{{this.title}}</h2>
                                </div>
                                <div class="col-2">
                                    <form method='GET' action='/api/blog/getone/{{this.id}}'>
                                        <button type="submit" class="btn btn-default btn-sm"><i class="fas fa-edit"></i></button>
                                    </form>
                                </div>
                                <div class="col-2">
                                    <form method='POST' action='/api/blog/destroy/{{this.id}}?_method=DELETE'>
                                        <button type="submit" class="btn btn-default btn-sm"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                                </div>
                            </div>
                            {{#each this.body}}
                                <p>{{this}}</p>
                            {{/each}}
                        </div>
                    {{#if isLast}}
                        </div>
                    {{/if}}
                {{/everyNth}}
            </div>
        </div>
    </div>

    <div class="pagerow">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    {{#showPrev blog.page blog.pages}}
                    {{/showPrev}}
                </div>
                <div class="col-6">
                    {{#showNext blog.page blog.pages}}
                    {{/showNext}}
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer }}