<div class="container-fluid">
    <div class="holder-div users-div">
        <div class="header-div">
            <h1>{{title}}</h1>
            {{>errors }}
        </div>
        {{#if blog.docs}} {{#each blog.docs}}
        <div class="row">
            <div class="card" style="width: 100%;">
                <div class="row edit-row ml-auto">
                    <div class="col-lg-12 text-right">
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h4 class="card-title">
                                <i class="fas fa-user"></i>
                                <strong>{{this.title}}</strong>
                            </h4>
                            <small class="card-subtitle mb-2 text-muted">
                                <i class="fas fa-calendar-alt"></i> {{this.updatedAt}}</small>
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                </div>
                                <div class="col text-right">
                                    <form method="GET" action='/{{this._id}}'>
                                        <button id="open-{{this._id}}" type="submit" class="icon-button">
                                            <i class="fas m-1 fa-edit fa-lg"></i>
                                        </button>
                                        <button id="remove-{{this._id}}" class='delete-btn icon-button' data-toggle="modal" data-target="#deletemodalblog{{this._id}}"
                                            type="submit">
                                            <i class="fas m-1 fa-trash fa-lg"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{>alert this}}
        </div>
        {{/each }}
        <div class="page-row">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        {{#showPrev blog.page blog.pages type}} {{/showPrev}}
                    </div>
                    <div class="col-6">
                        {{#showNext blog.page blog.pages type}} {{/showNext}}
                    </div>
                </div>
                <div class="text-center">
                    <p>Page {{blog.page}} of {{blog.pages}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{{/if}} {{#unless blog}}
</div>
</div>
{{/unless}}